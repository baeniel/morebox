<style>
  #change-color {
    background-color: white;
  }
</style>

<div class="container mt-5">

  <%= form_for Report.new do |f| %>
    <div class="form-group mb-5">
      <label for="name">고객 닉네임</label>
      <%= f.select :name, options_for_select(User.where(user_type: :fit_table).map { |u| [u.name] } ), { prompt: "선택해주세요." }, { class: 'form-control', id: "name" } %>
    </div>

    <label for="weight">체중</label>
    <%= f.number_field :weight, step: :any, id: "weight" %>

    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Kcal</th>
          <th scope="col">탄</th>
          <th scope="col">단</th>
          <th scope="col">지</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">아침</th>
          <td><%= f.number_field :morning_kcal, step: :any, id: "morning_kcal" %>kcal</td>
          <td><%= f.number_field :morning_carbo, step: :any, id: "morning_carbo" %>g</td>
          <td><%= f.number_field :morning_protein, step: :any, id: "morning_protein" %>g</td>
          <td><%= f.number_field :morning_fat, step: :any, id: "morning_fat" %>g</td>
        </tr>
        <tr>
          <th scope="row">점심</th>
          <td><%= f.number_field :lunch_kcal, step: :any, id: "lunch_kcal" %>kcal</td>
          <td><%= f.number_field :lunch_carbo, step: :any, id: "lunch_carbo" %>g</td>
          <td><%= f.number_field :lunch_protein, step: :any, id: "lunch_protein" %>g</td>
          <td><%= f.number_field :lunch_fat, step: :any, id: "lunch_fat" %>g</td>
        </tr>
        <tr>
          <th scope="row">저녁</th>
          <td><%= f.number_field :dinner_kcal, step: :any, id: "dinner_kcal" %>kcal</td>
          <td><%= f.number_field :dinner_carbo, step: :any, id: "dinner_carbo" %>g</td>
          <td><%= f.number_field :dinner_protein, step: :any, id: "dinner_protein" %>g</td>
          <td><%= f.number_field :dinner_fat, step: :any, id: "dinner_fat" %>g</td>
        </tr>
        <tr>
          <th scope="row">간식</th>
          <td><%= f.number_field :snack_kcal, step: :any, id: "snack_kcal" %>kcal</td>
          <td><%= f.number_field :snack_carbo, step: :any, id: "snack_carbo" %>g</td>
          <td><%= f.number_field :snack_protein, step: :any, id: "snack_protein" %>g</td>
          <td><%= f.number_field :snack_fat, step: :any, id: "snack_fat" %>g</td>
        </tr>
      </tbody>
    </table>

    <button type="submit" class="btn btn-primary mb-5">Submit</button>

  <% end %>
</div>

