<%#= render 'users/market_style' %>
<style>
  .line-height-30 {
    line-height: 30px;
  }
  .bottom_progress {
    position: fixed;
    bottom: 7%;
  }
  .font-weight-bold {
    font-weight: bold;
  }
  body {
    background: white !important;
  }
  .main-text-color {
    color: #200e57;
  }
  .secondary-text-color {
    color: #8a8a8a;
  }
  .line-height-25 {
    line-height: 25px;
  }
  .bg-custom-grey {
    background: #cfd3df;
  }
  .btn-custom-lightgrey {
    font-size:12px;
    background: #e9edf1;
  }
  .btn-custom-grey {
    color: #200e57;
    border: 1px solid #202649;
    background: #cfd3df !important;
  }
  .btn {
    border-radius: 0px;
  }
  .progress {
    background-color: black;
    position:relative;
    margin: 10px 0;
    height: 1.3rem;
  }
  label {
    color: #200e57;
    font-size: 13px;
    white-space: pre;
    line-height: 30px;
  }
  input, select {
    font-size: 13px;
    color: #8a8a8a !important;
    border-radius: 0px !important;
  }
  .user-info p.info{
    color: #8a8a8a;
    font-size: 12px;
    space: nowrap;
  }
  .user-info p.info.small{
    font-size: 9px;
  }
  .calorie-amount {
    display: flex;
    position:absolute;
    left:0;
    right:0;
    font-weight:bold;
    line-height:200%;
    width: 100%;
    height: 100%;
  }
  #change-color, .change-color {
    background-color: #e9eef2;
  }
  #tool-bar {
    width: 100%;
    height: 250px;
    position: fixed;
    bottom: 0%;
    /* background-color:#19244f !important; */
    /* background-color: transparent; */
  }
  .visually-hidden {
    position: absolute;
    left: -100vw;
  }
  .user-info{
    background-color: #e9edf1;
  }
  .btn-morebox {
    background-color: #200e57;
    color: white;
  }
  .btn:hover {
    color: white;
  }
  #output {
    color: #200e57;
    background: white;
    height: 55%;
  }
  .calorie-title {
    white-space:pre;
    font-weight:bold;
    font-size:12px;
  }
  .hat-outer{
    height: 50px;
    background: #e9edf1;
  }
  .hat-outer .row{
    height: 100%;
  }
  .hat{
    height: 100%;
    background: white;
  }
  .hat.right {
    padding: 0px;
    border-radius: 0 50% 0 0;
  }
  .hat.left {
    padding: 0px;
    border-radius: 50% 0 0 0;
  }
  .container.wear-hat {
    background-color: white;
    padding-top: 50px;
    padding-bottom: 300px;
  }
  .btn-custom-grey.btn:hover {
    color: unset;
  }
  label.btn:hover{
    color: unset;
  }
  input:checked + label {
    color: white !important;
    background: #200e57 !important;
  }
  .card-title {
    font-size: 12px;
  }
  #tool-bar .hat-outer { background: transparent;}
  #tool-bar .hat { background:#200e57; border: 1px #200e57 solid;}
  #tool-bar .inner {
    background:#200e57;
    margin-top: -25px;
    position: relative;
    height: 100%;
  }
  .progress-bar-vertical {
    width: 100%;
    height: 120px;
    margin-right: 20px;
    float: left;
    display: -webkit-box;  /* OLD - iOS 6-, Safari 3.1-6, BB7 */
    display: -ms-flexbox;  /* TWEENER - IE 10 */
    display: -webkit-flex; /* NEW - Safari 6.1+. iOS 7.1+, BB10 */
    display: flex;         /* NEW, Spec - Firefox, Chrome, Opera */
    align-items: flex-end;
    -webkit-align-items: flex-end; /* Safari 7.0+ */
  }
  .progress-bar-vertical .progress-bar {
    width: 100%;
    height: 0;
    /* background:#5cffe2 !important; */
    -webkit-transition: height 0.6s ease;
    -o-transition: height 0.6s ease;
    transition: height 0.6s ease;
  }
</style>
<div class="container text-dark py-4">
  <h4 class="bg-custom-grey main-text-color py-2 line-height-30" ><strong><%= @report.name %>님의 <%= @report.report_date %>일 Daily Report</strong></h4>
  <p class="main-text-color"><%= @report.comment %></p>
  <div class="mt-4">
    <strong><small><%= @report.name %>'s PROGRESS</small></strong>
  </div>
  <div class="row mt-2">
    <div class="col-3">
      <small>현재</small>
      <strong><%= @report.weight %>kg</strong>
    </div>
    <div class="col-6">
      <small>목표까지 남은 체중</small>
      <strong><%= (@report.weight - @report.target_weight).abs.round(1) %>kg</strong>
    </div>
    <div class="col-3">
      <small>목표</small>
      <strong><%= @report.target_weight %>kg</strong>
    </div>
  </div>
  <div class="progress" style="background: #e9edf1;">
    <div class="progress-bar" role="progressbar" style="width: 30%; background: #200e57;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    <i class="fas fa-2x fa-running"></i>
  </div>
  <div class="row mt-2">
    <div class="col-5">
      <small>지금</small> <br>
      <strong class="weight_answer"><%= Date.yesterday %></strong>
    </div>
    <div class="col-2"></div>
    <div class="col-5">
      <small>목표날짜</small> <br>
      <strong id="target_weight_answer"><%= @report.target_date %></strong>
    </div>
  </div>
  <!-- section 3 -->
  <h4 class="bg-custom-grey main-text-color py-2 line-height-30 mt-5" ><strong>칼로리 트래킹</strong></h4>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Kcal</th>
        <th scope="col">탄</th>
        <th scope="col">단</th>
        <th scope="col">지</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">아침</th>
        <td class="<%= "text-red" if @report.morning_kcal > 650 %>"><%= @report.morning_kcal %>kcal</td>
        <td class="<%= "text-red" if @report.morning_carbo > 70 %>"><%= @report.morning_carbo %>g</td>
        <td class="<%= "text-red" if @report.morning_protein > 35 %>"><%= @report.morning_protein %>g</td>
        <td class="<%= "text-red" if @report.morning_fat > 25 %>"><%= @report.morning_fat %>g</td>
      </tr>
      <tr>
        <th scope="row">점심</th>
        <td class="<%= "text-red" if @report.lunch_kcal > 650 %>"><%= @report.lunch_kcal %>kcal</td>
        <td class="<%= "text-red" if @report.lunch_carbo > 70 %>"><%= @report.lunch_carbo %>g</td>
        <td class="<%= "text-red" if @report.lunch_protein > 35 || (@report.lunch_protein > 0 && @report.lunch_protein < 15) %>"><%= @report.lunch_protein %>g</td>
        <td class="<%= "text-red" if @report.lunch_fat > 25 %>"><%= @report.lunch_fat %>g</td>
      </tr>
      <tr>
        <th scope="row">저녁</th>
        <td class="<%= "text-red" if @report.dinner_kcal > 650 %>"><%= @report.dinner_kcal %>kcal</td>
        <td class="<%= "text-red" if @report.dinner_carbo > 70 %>"><%= @report.dinner_carbo %>g</td>
        <td class="<%= "text-red" if @report.dinner_protein > 35 || (@report.dinner_protein > 0 && @report.dinner_protein < 15) %>"><%= @report.dinner_protein %>g</td>
        <td class="<%= "text-red" if @report.dinner_fat > 25 %>"><%= @report.dinner_fat %>g</td>
      </tr>
      <tr>
        <th scope="row">간식</th>
        <td class="<%= "text-red" if @report.snack_kcal > 650 %>"><%= @report.snack_kcal %>kcal</td>
        <td class="<%= "text-red" if @report.snack_carbo > 70 %>"><%= @report.snack_carbo %>g</td>
        <td class="<%= "text-red" if @report.snack_protein > 35 %>"><%= @report.snack_protein %>g</td>
        <td class="<%= "text-red" if @report.snack_fat > 25 %>"><%= @report.snack_fat %>g</td>
      </tr>
    </tbody>
  </table>
</div>
<div class="mb-3 col-12">
  <%= link_to "이전", :back, class: "btn btn-block btn-custom-grey nav-btn" %>
</div>
<%= render 'reports/calorie_report', total_kcal: @total_kcal, ideal_kcal: @report.ideal_kcal, carbo: @total_carbo, ideal_carbo: @report.ideal_carbo, protein: @total_protein, ideal_protein: @report.ideal_protein, fat: @total_fat, ideal_fat: @report.ideal_fat %>
