<style>
  .carousel-caption {
    position: absolute;
    top: 100px;
    left: 0;
    right: 0;
    z-index: 1;
  }
  h5 {
    color: #757CFF;
  }
  .carousel-inner {
    position: relative;
  }
  .item-img {
    position: relative;
    width: 100%;
    height: 100vh;
  }
  #touch {
    width: 15%;
    right: 30px;
    z-index: 999;
    bottom: 30px;
    position: fixed;
  }
  .mobile {
    display: none;
  }
  .carousel-control-next-icon {
    top: 50%;
    position: fixed;
  }
  .carousel-control-prev-icon {
    top: 50%;
    position: fixed;
  }
  .carousel-indicators {
    position: fixed;
    bottom: 10;
  }
  #sdaf {
    position: absolute;
    top: 10px;
    left: 0;
    right: 0;
    z-index: 1;
    width: 40%;
  }

  @media (min-width: 320px) and (max-width: 480px) {
    #touch {
      width: 25%;
      right: 10px;
      z-index: 999;
      bottom: 10;
      right: 0;
      position: fixed;
    }
    .item-img {
      z-index: -1;
      width: 100%;
      height: 100vh;
    }
    .tablet {
      display: none;
    }
    .mobile {
      display: block;
    }
  }
</style>

<div id="myCarousel" class="carousel slide tablet" data-ride="carousel" data-interval="3000">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag '/warning.png', class: "item-img" %>
    </div>
    <div class="carousel-item" >
      <%= image_tag '/main_box.png', class: "item-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag '/morebox_insta.png', class: "item-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag '/gorilla.png', class: "item-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag '/gorilla_2.png', class: "item-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag '/proteinade.png', class: "item-img" %>
    </div>
    <%= link_to home_index_path do %>
      <%= image_tag '/touch.png', id: "touch" %>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev" onclick="return false;">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next" onclick="return false;">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

