<% trainer_incentive ||= 0 %>

<div class="container mt-1">
  <%#= render 'shared/mobile_navbar' %>
  <div class="row mx-0 mt-4">
    <div class="col-2"></div>
    <div class="col-8 px-0">
      <%= image_tag '/gorilla_ronie.png', class: "px-sm-5 py-2 w-100" %>
    </div>
    <div class="col-2"></div>
  </div>

  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center" style="color: #200e57;">
    <h3 class="mt-1">일반인클라쓰 RONIE 정산 페이지입니다.</h3>
  </div>
</div>

<div class="container mt-3 mb-5">
  <div class="card-deck text-center">
    <!-- 모어박스 + 모어마켓 총 매출의 10%를 인센티브로 -->
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">이번 달 매출</h4>
      </div>
      <div class="card-body health pb-3">
        <h1 class="mt-3">
          <%= number_with_delimiter(@ronie&.month_ronie_sale) %>
          <small class="text-muted">원</small>
        </h1>
      </div>
    </div>
    <!-- 모어박스 + 모어마켓 총 매출의 10%를 인센티브로 -->
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">이번 달 정산액</h4>
      </div>
      <div class="card-body health pb-3">
        <h1 class="mt-3">
          <%= number_with_delimiter((0.2 * @ronie&.month_ronie_sale).floor) %>
          <small class="text-muted">원</small>
        </h1>
      </div>
    </div>

