<style>
  .bottom_progress {
    position: fixed;
    bottom: 7%;
  }
  .btn-custom-bottom {
    color: #6200EE;
  }
  .progress .progress-bar {
    background-color: #6200EE;
  }
</style>


<% index ||= 0 %>
<% prev_tab ||= nil %>
<% next_tab ||= nil %>

<div class="tab-pane fade <%= "show active" if index.zero? %>" id="tab-<%= index %>" role="tabpanel" aria-labelledby="tab-button-<%= index %>">

  <div class="<%= 'container text-white py-4' if next_tab %>">
    <%= yield %>
  </div>
  <div class="row mx-0">
    <% if next_tab %>
      <% if prev_tab %>
        <div class="col-6 bottom_progress">
          <a class="btn btn-block nav-btn" style="color: gray;" id="tab-button-<%= prev_tab %>" data-toggle="tab" href="#tab-<%= prev_tab %>" role="tab" onclick="$('#top-progress-bar').width('<%= (prev_tab.to_i + 1) * 7.7 %>%')">
            <i class="fas fa-4x fa-arrow-circle-left mb-2"></i> <br> <%= '이전' %>
          </a>
        </div>
      <% end %>
      <div class="offset-<%= prev_tab ? 6 : 3 %> col-6 bottom_progress">
        <a class="btn btn-block nav-btn btn-custom-bottom calculate-btn" id="tab-button-<%= next_tab %>" data-toggle="tab" href="#tab-<%= next_tab %>" role="tab" onclick="$('#top-progress-bar').width('<%= ((next_tab > 0 ? next_tab : 12).to_i + 1) * 7.3 %>%')">
          <i class="fas fa-4x fa-arrow-circle-right mb-2"></i> <br> <%= prev_tab ? '다음' : '시작하기' %>
        </a>
      </div>
    <% end %>
  </div>
</div>
