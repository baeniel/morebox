$("#authorized").val(false);
<% unless (params[:_type] == "send") %>
  <% if @result %>
    <% if (@result == "init") %>
      alert("인증번호가 3회 일치하지 않아 초기화 됐습니다. 새로운 인증번호를 요청하여 다시 한번 시도해주세요.");
      initPhoneForm("<%= params[:phone] %>")
    <% else %>
      alert("인증되었습니다.");
      $(".certification-code-field").attr("readonly", "true");
      $(".certification-btn").prop("disabled", "true");
      $("#authorized").val(true);
    <% end %>
  <% else %>
    alert("인증번호가 일치하지 않습니다. 다시 한번 시도해주세요.");
  <% end %>
<% end %>