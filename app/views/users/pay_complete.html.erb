<style>
  @media (min-width: 320px) and (max-width: 480px) {
    .item-img {
      /* z-index: -1; */
      width: 100%;
      height: 100vh;
    }
  }
</style>

<% if @result %>
  <%= image_tag '/pay_complete.png', class: "item-img" %>
<% else %>
  <script>
    Swal.fire({
      icon: "error",
      title: "결제 실패하였습니다.",
      text: "다시 한번 시도해주세요!",
      showConfirmButton: true,
      allowOutsideClick: false,
      confirmButtonText: '확인'
    });
  </script>
<% end %>