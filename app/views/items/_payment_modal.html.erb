      //     location.href = data.next_redirect_pc_url
      //   }
      // }
    })
  }
  $('#paymentModal').on('hidden.bs.modal', function (e) {
    if(document.querySelector(".point_check:checked")) document.querySelector(".point_check:checked").checked = false;
  })

</script>
