      <% end %>
    </div>
    <%= link_to "로그아웃", destroy_user_session_path, method: :delete, class: "btn btn-lg text-white card_mobile mt-5", style: "background-color: #48689a", data: {confirm: "로그아웃하시겠습니까?"} %>
  </div>
<% end %>
